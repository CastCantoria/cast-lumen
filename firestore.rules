rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Utilisateurs : lecture/écriture uniquement sur son propre document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Événements : lecture publique, écriture authentifiée
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Membres : lecture publique, écriture authentifiée
    match /members/{memberId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Répertoire : lecture publique, écriture authentifiée
    match /repertoire/{songId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Règles par défaut pour le développement
    //  À MODIFIER POUR LA PRODUCTION
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
