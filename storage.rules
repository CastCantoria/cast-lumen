rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /gallery/{allImages=**} {
      allow read: if true;
      allow write: if request.auth != null 
        && (request.auth.token.role == 'super-admin' || request.auth.token.role == 'admin');
      allow delete: if request.auth != null 
        && (request.auth.token.role == 'super-admin' || request.auth.token.role == 'admin');
    }
    
    match /partitions/{allFiles=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && (request.auth.token.role == 'super-admin' || request.auth.token.role == 'admin');
    }
    
    match /articles/{allImages=**} {
      allow read: if true;
      allow write: if request.auth != null 
        && (request.auth.token.role == 'super-admin' || request.auth.token.role == 'admin');
    }

    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && (request.auth.token.role == 'super-admin' || request.auth.token.role == 'admin');
    }
  }
}